<div class="container mt-5">
  <h1>Cadastrar Novo Instrumento</h1>

  <%= form_with model: [@user, @instrument], local: true do |form| %>
    <div class="mb-3">
      <%= form.label :name, 'Nome', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :category, 'Categoria', class: 'form-label' %>
      <%= form.text_field :category, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :brand, 'Marca', class: 'form-label' %>
      <%= form.text_field :brand, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :price, 'PreÃ§o (R$)', class: 'form-label' %>
      <%= form.number_field :price, step: 0.01, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Cadastrar Instrumento', class: 'btn btn-primary' %>
      <%= link_to 'Cancelar', user_profile_path(@user), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
