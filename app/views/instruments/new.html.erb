<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h1 class="card-title mb-0">
            <i class="fas fa-plus-circle"></i> Cadastrar Novo Instrumento
          </h1>
        </div>
        <div class="card-body">
          <%= form_with model: [@user, @instrument], local: true, class: "needs-validation", novalidate: true do |form| %>
            <% if @instrument.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@instrument.errors.count, "erro") %> impediram que o instrumento fosse salvo:</h4>
                <ul class="mb-0">
                  <% @instrument.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :name, 'Nome do Instrumento', class: 'form-label fw-bold' %>
                <%= form.text_field :name, class: 'form-control', required: true, 
                    placeholder: 'Ex: Violão Yamaha FG830' %>
                <div class="invalid-feedback">
                  Por favor, insira o nome do instrumento.
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :brand, 'Marca', class: 'form-label fw-bold' %>
                <%= form.text_field :brand, class: 'form-control', required: true, 
                    placeholder: 'Ex: Yamaha, Fender, Gibson' %>
                <div class="invalid-feedback">
                  Por favor, insira a marca do instrumento.
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :category, 'Categoria', class: 'form-label fw-bold' %>
                <%= form.select :category, 
                    options_for_select([
                      ['Selecione uma categoria', ''],
                      ['Cordas', 'Cordas'],
                      ['Sopro', 'Sopro'],
                      ['Percussão', 'Percussão'],
                      ['Teclado', 'Teclado']
                    ], @instrument.category), 
                    {}, { class: 'form-select', required: true } %>
                <div class="invalid-feedback">
                  Por favor, selecione uma categoria.
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :price, 'Preço (R$)', class: 'form-label fw-bold' %>
                <div class="input-group">
                  <span class="input-group-text">R$</span>
                  <%= form.number_field :price, step: 0.01, min: 0, class: 'form-control', 
                      required: true, placeholder: '0,00' %>
                </div>
                <div class="invalid-feedback">
                  Por favor, insira um preço válido.
                </div>
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :description, 'Descrição', class: 'form-label fw-bold' %>
              <%= form.text_area :description, class: 'form-control', rows: 4, 
                  required: true, 
                  placeholder: 'Descreva as características, estado de conservação, acessórios inclusos, etc.' %>
              <div class="form-text">
                Descreva detalhes sobre o instrumento, como estado de conservação, características especiais, acessórios inclusos, etc.
              </div>
              <div class="invalid-feedback">
                Por favor, insira uma descrição do instrumento.
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to user_profile_path(@user), class: 'btn btn-outline-secondary' do %>
                <i class="fas fa-arrow-left"></i> Cancelar
              <% end %>
              
              <%= form.submit 'Cadastrar Instrumento', class: 'btn btn-primary px-4' do %>
                <i class="fas fa-save"></i> Cadastrar Instrumento
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Form Validation Script -->
<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
