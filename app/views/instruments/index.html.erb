<div class="container-fluid py-4 instruments-index">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-4 text-primary fw-bold">
          <i class="fas fa-music"></i> TOCA√ç - Instrumentos Musicais
        </h1>
        <%= link_to "Adicionar Instrumento", new_instrument_path,
            class: "btn btn-primary btn-lg" %>
      </div>

      <!-- Search and Filter Section -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <%= form_with url: instruments_path, method: :get, local: true, class: "row g-3" do |f| %>
                <div class="col-md-4">
                  <%= f.text_field :search_name, placeholder: "Buscar instrumentos...",
                      value: params[:search_name], class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= f.select :search_category,
                      options_for_select(Instrument::CATEGORIES, params[:search_category]),
                      {include_blank: "Todas as categorias"}, { class: "form-select" } %>
                </div>
                <div class="col-md-3">
                  <%= f.select :search_brand,
                      options_for_select(Instrument::BRANDS, params[:search_brand]),
                      {include_blank: "Todas as marcas"}, { class: "form-select" } %>
                </div>
                <div class="col-md-2">
                  <%= f.submit "Buscar", class: "btn btn-outline-primary w-100" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Instruments Cards -->
  <div class="row">
    <% if @instruments && @instruments.any? %>
      <% @instruments.each do |instrument| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100 shadow-sm border-0 instrument-card">
            <!-- Card Header with Category Badge -->
            <div class="card-header bg-light border-0 pb-2">
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-primary fs-6"><%= instrument.category %></span>
                <small class="text-muted">
                  <i class="fas fa-user"></i>
                  <%= instrument.user.email if instrument.user %>
                </small>
              </div>
            </div>

            <!-- Card Body -->
            <div class="card-body d-flex flex-column">
              <!-- Instrument Name -->
              <h5 class="card-title text-dark fw-bold mb-2">
                <i class="fas fa-guitar"></i> <%= instrument.name %>
              </h5>

              <!-- Brand -->
              <p class="card-text mb-2">
                <strong class="text-primary">Marca:</strong>
                <span class="text-muted"><%= instrument.brand %></span>
              </p>

              <!-- Price -->
              <p class="card-text mb-3">
                <strong class="text-success fs-4">
                  <i class="fas fa-tag"></i>
                  <p><%= humanized_money_with_symbol(instrument.price) %></p>
                </strong>
              </p>

              <!-- Description -->
              <p class="card-text text-muted flex-grow-1">
                <% if instrument.description.present? %>
                  <%= truncate(instrument.description, length: 120) %>
                <% end %>
              </p>

              <!-- Action Buttons -->
              <div class="mt-auto pt-3">
                <div class="d-flex gap-2">
                  <%= link_to "Ver Detalhes", instrument_path(instrument),
                      class: "btn btn-outline-primary btn-sm flex-fill" %>
                  <% if instrument.user %>
                    <%= link_to "Editar", edit_instrument_path(instrument), class: "btn btn-outline-secondary btn-sm flex-fill" %>

                    <%= link_to "Excluir", instrument_path(instrument),
                        method: :delete,
                        data: {
                          confirm: "Tem certeza que deseja excluir este instrumento?"
                        },
                        class: "btn btn-outline-danger btn-sm flex-fill" %>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Card Footer -->
            <div class="card-footer bg-transparent border-0 pt-0">
              <small class="text-muted">
                <i class="fas fa-calendar"></i>
                Cadastrado em <%= instrument.created_at.strftime("%d/%m/%Y") %>
              </small>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="col-12">
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-music fa-5x text-muted"></i>
          </div>
          <h3 class="text-muted mb-3">Nenhum instrumento encontrado</h3>
          <p class="text-muted mb-4">
            <% if params[:search].present? || params[:category].present? || params[:brand].present? %>
              Tente alterar os filtros de busca para encontrar mais instrumentos.
            <% else %>
              Comece adicionando seus primeiros instrumentos musicais!
            <% end %>
          </p>
          <%= link_to "Adicionar Primeiro Instrumento", new_instrument_path,
              class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Results Count -->
  <% if @instruments && @instruments.any? %>
    <div class="row mt-4">
      <div class="col-12">
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          Mostrando <%= @instruments.count %> instrumento(s)
          <% if params[:search].present? %>
            para a busca "<strong><%= params[:search] %></strong>"
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

