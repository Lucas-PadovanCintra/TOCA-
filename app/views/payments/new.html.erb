<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.instrument.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Resumo da finalização da compra</h1>
      <p>Compra de <strong><%= @order.instrument.name %></strong> por <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
      <button id="pay" class="btn btn-primary">Pagar</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
